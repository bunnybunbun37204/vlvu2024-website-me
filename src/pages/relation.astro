---
import Avatar from "../components/Avatar";
import AvatarDisplay from "../components/AvatarDisplay";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout title="Main | Vid Lovd Vid U 2024">
  <main class="min-h-screen bg-gradient-to-b from-[#FBAEB4] to-[#FEDFC2]">
    <div class="max-w-screen-mobile mx-auto relative px-8">
      <!-- top navbar -->
      <Navbar />
      <!-- top navbar -->

      <!-- avatar -->
      <div class="grid grid-col-2 grid-flow-col flex-wrap">
        <div class="place-content-center overflow-hidden">
          <img
            src="assets/icon/cloud.svg"
            alt="cloud"
            class="absolute left-3 z-50"
          />
          <AvatarDisplay client:load />

          <p
            class="font-tomyam font-normal text-center text-white text-xl mt-2 mb-12"
          >
            Maipro (temp)
          </p>
        </div>

        <div class="place-content-center overflow-hidden">
          <img
            src="assets/icon/cloud.svg"
            alt="cloud"
            class="absolute right-3 z-50 scale-x-[-1]"
          />
          <AvatarDisplay client:load />

          <p
            class="font-tomyam font-normal text-center text-white text-xl mt-2 mb-12"
          >
            1234567891011121314151617 (temp)
          </p>
        </div>

        <div class="place-content-center overflow-hidden">
          <img
            src="assets/icon/cloud.svg"
            alt="cloud"
            class="absolute left-3 z-50"
          />
          <AvatarDisplay client:load />

          <p
            class="font-tomyam font-normal text-center text-white text-xl mt-2 mb-12"
          >
            Maipro (temp)
          </p>
        </div>
        <div class="place-content-center overflow-hidden">
          <img
            src="assets/icon/cloud.svg"
            alt="cloud"
            class="absolute right-3 z-50 scale-x-[-1]"
          />
          <AvatarDisplay client:load />

          <p
            class="font-tomyam font-normal text-center text-white text-xl mt-2 mb-12"
          >
            1234567891011121314151617 (temp)
          </p>
        </div>
      </div>
      <!-- avatar -->

      <!-- Bottom div -->
      <div class="grid grid-cols-3 place-items-center">
        <a
          href="/event"
          class="flex flex-col justify-center items-center gap-2"
        >
          <img src="assets/icon/mail.svg" alt="event" class="w-[67px]" />
          <p class="font-line font-semibold text-center text-white text-lg">
            Event
          </p>
        </a>
        <a
          href="/profile"
          class="flex flex-col justify-center items-center gap-2"
        >
          <img src="assets/icon/shirt.svg" alt="customize" class="w-[67px]" />
          <p class="font-line font-semibold text-center text-white text-lg">
            Customize
          </p>
        </a>
        <a
          href="/relation"
          class="flex flex-col justify-center items-center gap-2"
        >
          <img src="assets/icon/heart.svg" alt="relation" class="w-[67px]" />
          <p class="font-line font-semibold text-center text-white text-lg">
            Relation
          </p>
        </a>
      </div>
      <!-- Bottom div -->
    </div>
  </main>
</Layout>
