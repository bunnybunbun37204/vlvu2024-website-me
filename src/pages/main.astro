---
import Navbar from "../components/Navbar.astro";
import "../global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Main</title>
  </head>
  <body class="h-screen bg-gradient-to-b from-[#FBAEB4] to-[#FEDFC2]">
    <Navbar />

    <img src="/cloud.svg" alt="cloud" class="absolute left-3" />
    <img src="/char.png" alt="character" class="pt-10" />
    <p class="font-tomyam font-normal text-center text-white text-3xl -mt-5">
      khunfloat
    </p>

    <div
      class="grid grid-cols-3 place-items-center absolute bottom-24 w-screen"
    >
      <div class="flex flex-col justify-center items-center">
        <img src="/mail.svg" alt="event" class="w-[67px]" />
        <p class="font-tomyam font-normal text-center text-white text-3xl">
          event
        </p>
      </div>
      <div class="flex flex-col justify-center items-center">
        <img src="/shirt.svg" alt="customize" class="w-[67px]" />
        <p class="font-tomyam font-normal text-center text-white text-3xl">
          customize
        </p>
      </div>
      <div class="flex flex-col justify-center items-center">
        <img src="/heart.svg" alt="relation" class="w-[67px]" />
        <p class="font-tomyam font-normal text-center text-white text-3xl">
          relation
        </p>
      </div>
    </div>
  </body>
</html>
